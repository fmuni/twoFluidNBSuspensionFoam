FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        nAlphaCorr      2;
        nAlphaSubCycles 5;
        nAlphaOffDiagCorr 8;


        smoothLimiter   0.1;

        implicitPhasePressure no;
        solver          PCG;
        preconditioner	diagonal;
        tolerance       1e-7;
        relTol          0;
        minIter         0;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner        diagonal;
        tolerance       1e-5;
        relTol          1e-05;
        maxIter         100;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
        maxIter 200;
    }

    "U.*|Theta.*"
    {
        solver          PBiCGStab;
        preconditioner  diagonal;
        tolerance       1e-9;
        relTol          0;
        minIter         1;
    }



}

PIMPLE
{
    nOuterCorrectors    3;
    nCorrectors         5;
    nNonOrthogonalCorrectors 0;
    pRefCell 0;
    pRefValue 1e5;
    faceMomentum  on;

    residualControl
    {
        p_rgh           1e-5;
        "U.*"           1e-5;
 //       "alpha.*"       1e-3;
    }

}

relaxationFactors
{
    equations
    {

         "U.fluid|U.particles"  0.8;
         p_rgh        0.1;

         "(U.fluid|U.particles)Final"  1;
         p_rghFinal 0.3;
    }
}


